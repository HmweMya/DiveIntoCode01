<head>
  <style>
    table tr td{
      padding-top:10px;
    }
    body {
      color:#9966ff;
    }
    table {
      margin-bottom:10px;
    }
  </style>
</head>
<nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>                        
              </button>
              <a class="navbar-brand">トップページ</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
              <ul class="nav navbar-nav">
                <li class=""><%= link_to 'マイページ','/users/edit', class: "color" %></li>
                
                <li><%= link_to 'お問い合わせ','entry', class: "color" %></li>
                <li><%= link_to 'Blog',blogs_path, class: "color" %></li>
                <li><%= link_to "facebook認証", user_omniauth_authorize_path(:facebook), class: 'fa fa-facebook-square navbar-link color' %></li> 
                <li><%= link_to "twitter認証", user_omniauth_authorize_path(:twitter), class: 'fa fa-twitter-square navbar-link color' %></li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
               <li><% if user_signed_in? %>
                     <%= link_to 'ログアウト' , destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-user button color" %>
                     <% else %>
                     <%= link_to 'ログイン' ,new_user_session_path, class: "glyphicon glyphicon-log-in button color" %></li> 
                <% end %></ul>
              

            </div>
          </div>
        </nav>
<div class="container">
    <table>
        <tr>
            <td style="width:80px"><strong><em>タイトル</em></strong></td>
            <td><%= @blog.title %></td>
        </tr>
        <tr>
            <td><strong><em>内容</em></strong></td>
            <td><%= @blog.content %></td>
        </tr>
        <tr>
            
              <% if current_user.id==@blog.user.id %>
              
                <td><%= link_to '編集', edit_blog_path(@blog), class:"btn btn-warning" %> </td>
              <% end %>
            
            <td><%= link_to '戻る', blogs_path, class:"btn btn-info" %></td>
        </tr>
    </table>
</div>
