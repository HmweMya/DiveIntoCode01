<head>
  <style>
    table tr td{
      padding-top:10px;
    }
    body {
      color:#9966ff;
    }
    table {
      margin-bottom:10px;
    }
  </style>
</head>
<div class="container">
  <%= form_for(@blog) do |f| %>
    <table>
      <tr>
        <td><%= f.label:'タイトル' %></td>
        <td><%= f.text_field:title %></td>
      </tr>
      
      <tr style="margin-top:10px;">
          <td style="width:80px;"><%= f.label:'コンテンツ' %></td>
          <td><%= f.text_area:content %></td>
      </tr>
      <div class="actions">
        <tr>
          <td><%= f.submit '登録', :class => 'btn btn-success' %></td>
          <td><%= link_to '戻る', blogs_path , class:"btn btn-info"%></td>
        </tr>
      </div>
    </table>
    
      <% if @blog.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
    
          <ul>
          <% @blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      
    <% end %>
    
  <% end %>
</div>