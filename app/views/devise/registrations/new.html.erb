

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row" style="margin-top:20px">
          <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      		<form role="form">
      			<fieldset>
      				<h2>サインアップ画面</h2>
      				<hr class="colorgraph">
      				<div class="form-group">
      				        <%= f.email_field :email, :autofocus => true, :placeholder => 'メールアドレス', :class => 'form-control input-lg'  %>
      				</div>
      				<div class="form-group">
      				  <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字の最小)</em>
                <% end %><br />
      				         <%= f.password_field :password, :autofocus => true, :placeholder => 'パスワード', :class => 'form-control input-lg' %>
      				</div>
      				<div class="form-group">
      				         <%= f.password_field :password_confirmation, :autofocus => true, :placeholder => 'パスワードの確認', :class => 'form-control input-lg' %>
      				</div>
      				<hr class="colorgraph">
      				<div class="row">
      					<div class="col-xs-6 col-sm-6 col-md-6">
                    <%= link_to "ログイン", new_session_path(resource_name), class:"btn btn-lg btn-success btn-block"  %>
      					</div>
      					<div class="col-xs-6 col-sm-6 col-md-6">
      					   <input type="submit" class="btn btn-lg btn-primary btn-block" value="サインアップ">
      					</div>
      				</div>
      				<div class="row">
      				  <div class="col-xs-6 col-sm-6 col-md-6"><%= link_to "確認メールがまだ届きませんか？", new_user_confirmation_path(resource_name) %><br /></div>
      				</div>
      			</fieldset>
      		</form>
      	</div>
      </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>



