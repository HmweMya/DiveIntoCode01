<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    		<form role="form">
    			<fieldset>
    				<h2>ユーザー編集</h2>
    				<hr class="colorgraph">
    				<div class="form-group">
    				        <%= f.email_field :email, :autofocus => true, :placeholder => 'メールアドレス', :class => 'form-control input-lg'  %>
    				</div>
    				<div class="form-group">
    				         <%= f.text_field :name, :autofocus => true, :placeholder => '名前', :class => 'form-control input-lg' %>
    				</div>
    				<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
    				
    				
    				
    				 <i>(あなたはそれを変更したくない場合は空白のままに)</i>
    				<div class="form-group">
    				         <%= f.password_field :password, :autofocus => true, :placeholder => 'パスワード', :class => 'form-control input-lg' %>
    				</div>
    				
    				 <div class="form-group">
    				         <%= f.password_field :password_confirmation, :autofocus => true, :placeholder => 'パスワードの確認', :class => 'form-control input-lg' %>
    				  </div>
    				   <i>(私たちはあなたの変更を確認するために現在のパスワードを必要とします。)</i>
    				  <div class="form-group">
    				         <%= f.password_field :current_password, :autofocus => true, :placeholder => '現在のパスワード', :class => 'form-control input-lg' %>
    				  </div>
    				 
    				
    				 <div class="actions">
                <%= f.submit "更新" %>
              </div>
    				 
    				<hr class="colorgraph">
    				<div class="row">
    					<div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="ログイン">
    					</div>
    					<div class="col-xs-6 col-sm-6 col-md-6">
    					  <%= link_to "サインアップ", new_registration_path(resource_name) ,class: "btn btn-lg btn-primary btn-block"  %>
    					</div>
    				</div>
    			</fieldset>
    		</form>
    		<h3>アカウントをキャンセル</h3>

        <p>不幸? <%= button_to "アカウントをキャンセル", registration_path(resource_name), data: { confirm: "本気ですか?" }, method: :delete %></p>
        
         <%= link_to '戻る','/', class: "button" %>
    	</div>
    </div>
    
    <%= render "devise/shared/links" %>
    <% end %>
</div>