<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    		<form role="form">
    			<fieldset>
    				<h2>ログイン画面</h2>
    				<hr class="colorgraph">
    				<div class="form-group">
    				        <%= f.email_field :email, :autofocus => true, :placeholder => 'メールアドレス', :class => 'form-control input-lg'  %>
    				</div>
    				<div class="form-group">
    				         <%= f.password_field :password, :autofocus => true, :placeholder => 'パスワード', :class => 'form-control input-lg' %>
    				</div>
    				<span class="button-checkbox">
    					<button type="button" class="btn" data-color="info"> 今後パスワードの自動入力を利用</button>
                <input type="checkbox" name="remember_me" id="remember_me" checked="checked" class="hidden">
                <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name),class: "btn btn-link pull-right" %>
    				</span>
    				<hr class="colorgraph">
    				<div class="row">
    					<div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="ログイン">
    					</div>
    					<div class="col-xs-6 col-sm-6 col-md-6">
    					  <%= link_to "サインアップ", new_registration_path(resource_name) ,class: "btn btn-lg btn-primary btn-block"  %>
    					</div>
    				</div>
    				<hr class="colorgraph">
    				<div class="row">
    				  <div class="col-xs-6 col-sm-6 col-md-6"><%= link_to "facebookで登録", user_omniauth_authorize_path(:facebook), class: 'btn btn-lg btn-primary btn-block fa fa-facebook-square navbar-link' %></div>
    				  <div class="col-xs-6 col-sm-6 col-md-6"><%= link_to "Twitterで登録", user_omniauth_authorize_path(:twitter), class: 'btn btn-lg btn-info btn-block fa fa-twitter-square navbar-link' %></div>
    				</div>
    				<div class="row">
    				  <div class="col-xs-6 col-sm-6 col-md-6"><%= link_to "確認メールがまだ届きませんか？", new_user_confirmation_path(resource_name) %><br /></div>
    				</div>
    			</fieldset>
    		</form>
    	</div>
    </div>
    <%= render "devise/shared/links" %>
    <% end %>
</div>
