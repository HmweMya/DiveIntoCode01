<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
      
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    		<form role="form">
    			<fieldset>
    				<h2>パスワード変更画面</h2>
    				<hr class="colorgraph">
    				<%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>
    				<div class="form-group">
    				        <%= f.password_field :password, :autofocus => true, :placeholder => '新しいパスワード', :class => 'form-control input-lg'  %>
    				</div>
    				<% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字の最小)</em><br />
            <% end %>
            <div class="form_group">
              <%= f.password_field :password_confirmation, :autofocus => true, :placeholder => '新しいパスワードを確認', :class => 'form-control input-lg'  %> 
            </div>
            <div class="actions">
              <%= f.submit "マイパスワードの変更" %>
            </div>
    				<hr class="colorgraph">
    				<div class="row">
    					<div class="col-xs-6 col-sm-6 col-md-6">
                  <%= link_to "ログイン", new_session_path(resource_name), class:"btn btn-lg btn-success btn-block"  %>
    					</div>
    					<div class="col-xs-6 col-sm-6 col-md-6">
    					  <%= link_to "サインアップ", new_registration_path(resource_name) ,class: "btn btn-lg btn-primary btn-block"  %>
    					</div>
    				</div>
    				<div class="row">
    				  <div class="col-xs-6 col-sm-6 col-md-6"><%= link_to "確認メールがまだ届きませんか？", new_user_confirmation_path(resource_name) %><br /></div>
    				</div>
    			</fieldset>
    		</form>
    	</div>
    </div>
    <%= render "devise/shared/links" %>
    <% end %>
</div>
