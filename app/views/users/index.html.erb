<head>
    
    <style>
        .thumbnail{
            margin: 0px auto;
            max-width: 200px;
        }
        .img-responsive {
            display: block;
            
        }
        table thead tr td,
        table tbody tr td {
            text-align:center;
        }
        .aboutme{
            min-width: 200px;
        }
    </style>
    
</head>
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>                        
              </button>
              <a class="navbar-brand">トップページ</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
              <ul class="nav navbar-nav">
                <li class=""><%= link_to 'マイページ','/users/edit', class: "color" %></li>
                
                <li><%= link_to 'お問い合わせ','entry', class: "color" %></li>
                <li><%= link_to 'Blog',blogs_path, class: "color" %></li>
                <li><%= link_to "facebook認証", user_omniauth_authorize_path(:facebook), class: 'fa fa-facebook-square navbar-link color' %></li> 
                <li><%= link_to "twitter認証", user_omniauth_authorize_path(:twitter), class: 'fa fa-twitter-square navbar-link color' %></li>
                <li><%= link_to "ユーザー一覧", '/users/index' , class: "color" %> </li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
               <li><% if user_signed_in? %>
                     <%= link_to 'ログアウト' , destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-user button color" %>
                     <% else %>
                     <%= link_to 'ログイン' ,new_user_session_path, class: "glyphicon glyphicon-log-in button color" %></li> 
                <% end %></ul>
              

            </div>
          </div>
        </nav>
<div class="container">
    <div class="row">
        <% @user %>
        <table>
            <thead>
              <tr>
                  <td>名前</td>
                  <td>私について</td>
                  <td>写真</td>
              </tr>  
            </thead>
            <tbody>
                <% @user.each do |user| %>
                    <tr>
                    
                        <td><%= user.name %></td>
                        <td class="aboutme"><%= user.about_me %></td>
                        <td class="thumbnail img-rounded img-responsive"><%= image(user) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    
   </div> 
</div>
